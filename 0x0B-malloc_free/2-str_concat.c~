int i;
if (!str)
{
return (NULL);
}
pt = malloc(sizeof(char) * strlen(str) + 1);
if (!pt)
{
return (NULL);
}
i = -1;
while (str[++i] && pt != NULL)
{
pt[i] = str[i];
}
pt[i] = pt[i];
